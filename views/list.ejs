        <tbody>

        <% orders.forEach(function (order) { %>
            <tr>
                <td> <%= order.id %> </td>
                <td> <%= order.title %> </td>
                <td> <%= order.body %> </td>
                <td>
                    <a href="/edit/<%= order.id %>" class="btn btn-primary btn-sm">Edit</a>
                    <form class="d-inline"  action="/delete/<%= order.id %>" method="post">
